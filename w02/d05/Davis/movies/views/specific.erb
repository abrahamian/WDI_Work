<p>
	<% file = File.new("movies.txt", "r") %>
	<% file.each do |line| %>
		<% movies_array = line.split(",") %>
		<% if movies_array[0] == params[:id] %>
			<%= "ID: #{@id}" %>
			<br>
			<%= "Title: #{movies_array[1]}" %>
			<br>
			<%= "Year: #{movies_array[2]}" %>
			<br>
			<img src="<%="#{movies_array[3]}"%>" alt="">			
			<br>
			<br>
		<% end %>
	<% end %>
	<% file.close %>
</p>
