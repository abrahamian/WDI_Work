<a class ="greeting" href="/">movie submarine</a>

  <% @result.each do |row| %>

      <% if "#{row['id']}" == params[:id]%>

        <% id = "#{row['id']}" %>
        <% title = "#{row['title']}" %>
        <% date =  "(#{row['date']})" %>
        <% poster_url =  "#{row['poster']}" %>
        <% plot =  "(#{row['plot']})" %>
          <div class="single-movie">
            <div class="left">
              <ul>
                <li class="title"><%= title %></li>
                <li class="sub"><%= date %></li>
                <li><a href="/movies/<%=id%>"><img src=<%=poster_url %>/></a></li>
              </ul>
            </div>
          <div class="right">
            <li class ="plot"><%= plot %></li>
          </div>
        </div>
      <% end %>
<% end %>
<% db_conn.close %>