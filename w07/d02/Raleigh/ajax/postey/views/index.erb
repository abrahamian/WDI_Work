<h1>Postey</h1>

<form>
   <label>Title:</label><br />
   <input name="title" type="text" /><br />

  <label>Content:</label><br />
  <textarea name="content"></textarea><br />

  <button>Save</button>
</form>

<h3>Posts</h3>
<ul>
   <% @posts.each do |post| %>
   <li>Title: <%= post[:title] %>, Content: <%= post[:content] %></li>
   <% end %>
</ul>