<form action="/actors" method="POST">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />

  <label>
    Name
    <input type="text" name="name" placeholder="actor's name" />
  </label>

  <label>
    Birth Date
    <input type="date" name="birth_date" placeholder="select birth date" />
  </label>

  <label>
    Photo Url
    <input type="text" name="photo_url" placeholder="url of photo" />
  </label>

  <button>submit</button>

</form>