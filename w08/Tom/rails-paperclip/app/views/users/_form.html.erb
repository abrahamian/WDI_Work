<%= form_for @user, html: { multipart: true } do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :resume %><br>
    <%= f.file_field :resume %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
